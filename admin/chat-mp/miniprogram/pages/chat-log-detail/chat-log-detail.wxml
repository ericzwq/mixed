<view>
  <view wx:for="{{contents}}" wx:key="id" class="item">
    <image class="avatar" src="{{BASE_URL + unameUserMap[item.from].avatar}}" />
    <view class="main">
      <view class="top">
        <text>{{unameUserMap[item.from].nickname}}</text>
        <text class="right">{{item.createdAt}}</text>
      </view>
      <view class="content">
        <chat-log class="chat-log" data="{{item.content}}" wx:if="{{item.type === 7}}" />
        <view wx:else data-i="{{index}}">
          <text class="{{index === activeIndex ? 'active' : ''}} text" wx:if="{{item.type === 1}}">{{item.content}}</text>
          <image mark:audioPlay="1" src="../../static/image/voice.svg" wx:elif="{{item.type === 3}}" width="30" class="audio {{item.isPlay ? 'play' : ''}}"></image>
        </view>
      </view>
    </view>
  </view>
</view>